<%= form_for @film, html: { class: "mx-auto", style: "max-width: 500px" } do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :year, class: "form-label" %>
    <%= f.number_field :year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :describtion, class: "form-label" %>
    <%= f.text_area :describtion, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :rating, class: "form-label" %>
    <%= f.number_field :rating, class: "form-control", step: "0.1" %>
  </div>

  <div class="mb-3">
    <%= f.label :actor, class: "form-label" %>
    <%= f.text_field :actor, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :director, class: "form-label" %>
    <%= f.text_field :director, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :length, class: "form-label" %>
    <%= f.number_field :length, class: "form-control" %>
  </div>

  <%= f.submit "Update Film", class: "btn btn-primary rounded-pill bg-info" %>
<% end %>